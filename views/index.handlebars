<div class="container">
    <h1> 
        <div id="burger-1">
        </div>
        The Burger Spot
    </h1>
    <div class="row">
        <div class="col-12">
            <div class="card add">

                <h2>Select Your Burger</h2>
                <form class="create-form">
                    <div class="form-group">
                        <label for="burger_name">Item:</label>
                        <input type="text" id="burger_name" name="name">
                    </div>
                    <button type="submit" id="submit">Add Your Burger!</button>
                </form>
            </div>
        </div>
<div class="col-lg-6 col-sm-12">
            <div class="ready card">
                <h2>Burgers: Ready</h2>
                <ul>
                    {{#each burgers}} 
                        {{#unless this.devoured}} 
                            <span class="label col-2">{{id}}</span> 
		                    <span class="label col-7">{{burger_name}}</span>
                            <button class="devour" data-id="{{id}}" data-devoured="{{devoured}}">DEVOUR</button>
                        {{/unless}} 
                    {{/each}}
                </ul>
            </div>
        </div>
        <div class="col-lg-6 col-sm-12">
            <div class="devoured card">
                <h2>Burgers: Devoured</h2>
                <ul>
                    {{#each burgers}} 
                        {{#if this.devoured}} 
                            {{!-- <div class="card item">{{> burger-block devoured=true}}</div> --}}
                        {{/if}} 
                    {{/each}}
                </ul>
            </div>
        </div>

        
    </div>
</div>